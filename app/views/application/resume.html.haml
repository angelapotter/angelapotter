  .container.container--page-width.container--first.container--last.container--content
    .resume__section
      %h3.heading--section Experience
      .resume__subsection
        %p
          %strong #{ current_job.position } &nbsp;|&nbsp; #{ link_to current_job.company, current_job.website, class: 'text-link--white' }
          %br
          May 2016–present in San Francisco
        %ul
          %li Design end-to-end experiences for mobile event app, CMS, and analytics products
          %li Created the company’s first-ever web style guide, and oversaw its implementation across projects
          %li Sole product designer for a 25-person engineering team

      .resume__subsection
        %p
          %strong UI/UX Designer &nbsp;|&nbsp; #{ link_to 'Goldbely', 'https://goldbely.com', class: 'text-link--white' }
          %br
          June 2014–April 2016 in San Francisco
        %ul
          %li Managed the full web design lifecycle, from concept through implementation
          %li Coded in HAML/SASS and CoffeeScript
          %li Conducted user testing and translated notes into design priorities

      .resume__subsection
        %p
          %strong UX Designer &nbsp;|&nbsp; #{ link_to 'OLSET', 'https://olset.com', class: 'text-link--white' }
          %br
          July 2013-June 2014 in San Francisco
        %ul
          %li Sole designer and front-end developer
          %li Participated in 500 Startups Batch 7 with OLSET

      .resume__subsection
        %p
          %strong Interaction Designer &nbsp;|&nbsp; MyFive
          %br
          Dec 2012–June 2013 in Seattle
        %ul
          %li Designed and implemented the company's first ever user testing program
          %li Coded working prototypes in HTML and JQuery

    .resume__section
      %h3.heading--section Skills
      .resume__subsection
        %p
          %strong Design
          %br
          Interaction design, wireframing, user research, responsive mockups

        %p
          %strong Software
          %br
          Sketch, Balsamiq, Adobe Photoshop

        %p
          %strong Web Development
          %br
          HTML, CSS, Javascript, Git

    .resume__section
      %h3.heading--section Education
      .resume__subsection
        %p
          Bachelor of Music in Music Cognition &amp; Flute Performance
          %br
          %strong Northwestern University
          &nbsp;|&nbsp; June 2012 in Evanston, IL

    .resume__section
      %h3.heading--section Contact
      .resume__subsection
        %ul.list-unstyled
          %li
            = link_to social_urls.linkedin, target: '_blank', class: 'text-link--white' do
              <strong>linkedin</strong>.com/in/angelacbpotter
          %li
            = mail_to contact_info.email, contact_info.email, class: 'text-link--white'

    .resume__view-pdf
      = link_to 'View Resume PDF', asset_path( 'resume.pdf' )

  = render 'layouts/back_to_top'
