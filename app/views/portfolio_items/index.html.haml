- content_for :title, 'Portfolio'

= render 'layouts/single_page_nav'

.heading--page
  .heading__background-image
  %h2 Portfolio

.content.portfolio-items
  - portfolio_items.each_with_index do |item, index|
    .portfolio-item.js__portfolio-item{ id: "portfolio-item--#{ item.slug }" }
      .container.container--page-width.container--content
        %h3.heading--section.portfolio-item__name= item.name

        .portfolio-item__image-container
          - if index.even?
            = image_tag "portfolio/samples/#{ item.company_slug }/#{ item.slug }.jpg", class: 'portfolio-item__image'
          - else
            = image_tag "portfolio/samples/#{ item.company_slug }/#{ item.slug }_gray.jpg", class: 'portfolio-item__image'

        .portfolio-item__text-content
          .portfolio-item__info
            - if item.company
              .line Company: #{ item.company }
            - if item.platform
              .line Platform: #{ item.platform }
            - if item.role
              .line Role: #{ item.role }

          .portfolio-item__blurb= item.blurb

          - if item.outbound_link.present?
            .portfolio-item__link-container
              = link_to item.outbound_link.label, item.outbound_link.url, target: '_blank', class: 'text-link--primary'
